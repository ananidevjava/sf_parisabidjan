
{% extends 'layouts/register_and_login_base.html.twig' %}

{% block title %}Admin{% endblock %}

{% block body %}
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth px-0">
                <div class="row w-100 mx-0">
                    <div class="col-lg-8 mx-auto">
                        <div class="auth-form-light  py-5 px-4 px-sm-5">
                            <div class="brand-logo text-center">
                                <img src="{{ asset('assets/images/logo.svg') }}" alt="logo">
                            </div>
                            <h4 class="text-center">Creer un compte</h4>
                            <h6 class="font-weight-light text-center">Inscrivez-vous sur ParisAbidjan</h6>
                            {{ form_errors(registrationForm) }}
                            {{ form_start(registrationForm) }}

                            <form method="post" class="pt-3">
                                <div class="form-row col-md-12">
                                    {{ form_row(registrationForm._token, {'attr':{'class':'hidden'}}) }}
                                    <div class="form-group col-md-6">
                                        {{ form_row(registrationForm.firstName, {'attr':{'class':'form-control form-control-lg'}}) }}
                                    </div>
                                    <div class="form-group col-md-6">
                                        {{ form_row(registrationForm.lastName, {'attr':{'class':'form-control form-control-lg'}}) }}
                                    </div>
                                </div>

                                <div class="form-row col-md-12">
                                    <div class="form-group col-md-6">
                                        {{ form_row(registrationForm.dob, {'attr':{'class':'form-control form-control-lg'}}) }}
                                    </div>
                                    <div class="form-group col-md-6">
                                        {{ form_row(registrationForm.gender, {'attr':{'class':'form-control form-control-lg'}}) }}
                                    </div>
                                </div>
                                <div class="form-row col-md-12">
                                    <div class="form-group col-md-6">
                                        {{ form_row(registrationForm.phone1, {'attr':{'class':'form-control form-control-lg'}}) }}
                                    </div>
                                    <div class="form-group col-md-6">
                                        {{ form_row(registrationForm.phone2, {'attr':{'class':'form-control form-control-lg'}}) }}
                                    </div>
                                </div>
                                <div class="form-row col-md-12">
                                    <div class="form-group col-md-6">
                                        {{ form_row(registrationForm.email, {'attr':{'class':'form-control form-control-lg'}}) }}

                                    </div>
                                    <div class="form-group col-md-6">
                                        {{ form_row(registrationForm.plainPassword, {'attr':{'class':'form-control form-control-lg'}}) }}
                                    </div>
                                </div>

                                {#                                <div class="form-group">#}
                                {#                                    <select class="form-control form-control-lg" id="exampleFormControlSelect2">#}
                                {#                                        <option>Pays</option>#}
                                {#                                        <option>United States of America</option>#}
                                {#                                        <option>United Kingdom</option>#}
                                {#                                        <option>India</option>#}
                                {#                                        <option>Germany</option>#}
                                {#                                        <option>Argentina</option>#}
                                {#                                    </select>#}
                                {#                                </div>#}
                                {#                                <div class="form-group">#}
                                {#                                    <input type="password" class="form-control form-control-lg" id="exampleInputPassword1" placeholder="Mot de passe">#}
                                {#                                </div>#}

                                {#                                <div class="form-group">#}
                                {#                                    <input type="password" class="form-control form-control-lg" id="exampleInputPassword2" placeholder="Confirmer le mot de passe">#}
                                {#                                </div>#}
                                <div class="mb-4">
                                    <div class="form-check">
                                        <label class="form-check-label text-muted">
                                            {{ form_widget(registrationForm.agreeTerms, {'attr':{'class':'form-check-input'}}) }}
                                            J'accepte tous les termes et conditions
                                        </label>
                                    </div>
                                </div>
                                <div class="mt-3">
                                    <button type="submit" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" >S'INSCRIRE</button>
                                </div>
                                <div class="text-center mt-4 font-weight-light">
                                    Vous avez déjà un compte? <a href="{{ path('app_login') }}" class="text-primary">Se connecter</a>
                                </div>
                            </form>
                            {{ form_end(registrationForm) }}
                        </div>
                    </div>
                </div>
            </div>
            <!-- content-wrapper ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
{% endblock %}